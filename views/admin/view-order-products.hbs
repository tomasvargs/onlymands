<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 17rem; ">
                    <img class="card-img-top" src="/product-images/{{this.product._id}}.jpeg" alt="Card image cap"
                        style="height: 16rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.Name}}</h5>
                        <h6 class="card-title">Rs.{{this.product.Price}}</h6>
                        <p class="card-text">Quantity:{{this.quantity}}</p>
                        <p class="card-text">{{this.Description}}</p>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>