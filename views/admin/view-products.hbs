<section>
  <h1 style="text-align: center; margin-top:30px">PRODUCTS</h1>
  <div class="container" id="addform">

    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Price</th>
          <th scope="col">Options</th>

        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="height: 70px; width:70px" src="/product-images/{{this._id}}.jpeg" alt=""></td>
          <td>Rs.{{this.Price}}</td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Products</a>
    </div>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#productsTable').DataTable();
  });
</script>
<style>
  #addform {
    margin-top: 50px;
    margin-bottom: 50px;
  }
</style>